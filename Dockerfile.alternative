FROM python:3.9-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy all files explicitly
COPY app.py .
COPY In_PowerCurves_Dut.csv .
COPY run.py .
COPY wsgi.py .

# Make it executable
RUN chmod +x run.py

EXPOSE 4000

# Use alternative approach with direct Python run instead of Gunicorn
CMD ["python", "run.py"] 